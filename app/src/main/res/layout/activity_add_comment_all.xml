<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zeyuan.kyq.widget.MyLayout
        android:id="@+id/my_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height48">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="@dimen/height48"
                    android:layout_height="match_parent"
                    android:src="@mipmap/top_btn_back_blue"
                    android:scaleType="centerInside"
                    />
                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:text="发表"
                    android:textSize="@dimen/font16"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/light_green"
                    />
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@+id/tv_save"
                    android:layout_toRightOf="@+id/iv_back"
                    android:gravity="center"
                    android:textColor="@color/text_color2"
                    android:textSize="@dimen/front18"
                    android:text=""
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_ccc"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <com.zeyuan.kyq.widget.CustomScrollView
                android:id="@+id/sv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/main_color"
                android:overScrollMode="never"
                android:fadingEdge="none"
                android:scrollbars="none">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin8"
                        android:background="@color/white">

                        <LinearLayout
                            android:id="@+id/v_dot"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:visibility="gone">

                            <com.zeyuan.kyq.widget.CircleImageView
                                android:id="@+id/civ"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:scaleType="centerCrop"
                                android:layout_margin="@dimen/margin12"
                                android:layout_gravity="center_vertical"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="@dimen/padding12">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        >
                                        <TextView
                                            android:id="@+id/tv_dot_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="随风飞"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:textSize="@dimen/font16"
                                            android:textStyle="bold"
                                            android:textColor="@color/text_color333"
                                            android:gravity="center_vertical"/>
                                        <TextView
                                            android:id="@+id/tv_dot_type"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:textSize="@dimen/font12"
                                            android:textColor="@color/text_color333"
                                            android:paddingTop="4dp"
                                            android:text="(主任医生)"
                                            android:paddingLeft="2dp"/>

                                    </LinearLayout>
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/tv_host_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:text="随风飞"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:textSize="@dimen/font14"
                                    android:maxWidth="180dp"
                                    android:textColor="@color/text_color333"
                                    android:gravity="center_vertical"/>
                                <TextView
                                    android:id="@+id/tv_sub"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:text="随风飞随风随风飞随风随随风飞随风随风飞随风随随风飞随风随风飞随风随"
                                    android:textSize="@dimen/font12"
                                    android:textColor="@color/text_color666"
                                    android:paddingRight="10dp"
                                    android:paddingTop="2dp"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/v_other"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/iv_other"
                                android:layout_width="102dp"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/default_img"/>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="@dimen/padding12">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp">

                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="20dp"
                                        >
                                        <TextView
                                            android:id="@+id/tv_name_other"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:text="随风飞"
                                            android:singleLine="true"
                                            android:ellipsize="end"
                                            android:textSize="@dimen/font16"
                                            android:textStyle="bold"
                                            android:textColor="@color/text_color333"
                                            android:gravity="center_vertical"/>
                                       <!-- <TextView
                                            android:id="@+id/tv_dot_type"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:textSize="@dimen/font12"
                                            android:textColor="@color/text_color333"
                                            android:paddingTop="4dp"
                                            android:text="(主任医生)"
                                            android:paddingLeft="2dp"/>-->

                                    </LinearLayout>
                                </RelativeLayout>

                                <TextView
                                    android:id="@+id/tv_sub_other"
                                    android:layout_width="match_parent"
                                    android:layout_height="60dp"
                                    android:maxLines="3"
                                    android:ellipsize="end"
                                    android:text="随风飞随风随风飞随风随随风飞随风随风飞随风随随风飞随风随风飞随风随"
                                    android:textSize="@dimen/font12"
                                    android:textColor="@color/text_color666"
                                    android:paddingRight="10dp"
                                    android:paddingTop="2dp"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                        
                        <TextView
                            android:id="@+id/tv_type_txt_1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="对医生的评价"
                            android:textColor="@color/text_color333"
                            android:textSize="@dimen/font16"
                            android:paddingLeft="12dp"
                            android:gravity="center_vertical"
                            android:background="@color/main_color"
                            />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="220dp">
                            
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:paddingLeft="@dimen/padding12"
                                android:paddingRight="@dimen/padding12"
                                android:gravity="center_vertical">
                                <View
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="1px"
                                    android:background="@color/line_ddd"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:drawableLeft="@drawable/icon_comment_all_green"
                                    android:text="总体评价"
                                    android:gravity="center_vertical"
                                    android:drawablePadding="4dp"
                                    android:paddingLeft="4dp"
                                    android:paddingRight="4dp"
                                    android:textSize="@dimen/font12"
                                    />
                                <View
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="1px"
                                    android:background="@color/line_ddd"/>
                            </LinearLayout>

                            <RelativeLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp">
                                <com.zeyuan.kyq.widget.selector.CommentLevelSelector
                                    android:id="@+id/csl1"
                                    android:layout_width="match_parent"
                                    android:layout_height="36dp"
                                    android:layout_marginLeft="70dp"
                                    android:layout_marginRight="70dp"
                                    android:layout_centerVertical="true">

                                </com.zeyuan.kyq.widget.selector.CommentLevelSelector>
                                <TextView
                                    android:id="@+id/tv_csl_1"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:text="未评价"
                                    android:textSize="@dimen/font14"
                                    android:textColor="@color/google_red"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="@dimen/margin12"
                                    android:gravity="center_vertical|right"
                                    />
                            </RelativeLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:paddingLeft="@dimen/padding12"
                                android:paddingRight="@dimen/padding12"
                                android:layout_marginTop="15dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text="服务态度:"
                                    android:textSize="@dimen/font12"
                                    android:textColor="@color/text_color666"
                                    android:paddingRight="6dp"
                                    />
                                <com.zeyuan.kyq.widget.selector.CommentLevelSelector
                                    android:id="@+id/cls2"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:id="@+id/tv_cls_2"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:text="未评价"
                                    android:textSize="@dimen/font12"
                                    android:textColor="@color/text_color666"
                                    android:gravity="center_vertical|right"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:paddingLeft="@dimen/padding12"
                                android:paddingRight="@dimen/padding12">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text="体感变化:"
                                    android:textSize="@dimen/font12"
                                    android:textColor="@color/text_color666"
                                    android:paddingRight="6dp"
                                    />
                                <com.zeyuan.kyq.widget.selector.CommentLevelSelector
                                    android:id="@+id/cls3"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:id="@+id/tv_cls_3"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:text="未评价"
                                    android:textSize="@dimen/font12"
                                    android:textColor="@color/text_color666"
                                    android:gravity="center_vertical|right"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:paddingLeft="@dimen/padding12"
                                android:paddingRight="@dimen/padding12">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text="影像评价:"
                                    android:textSize="@dimen/font12"
                                    android:textColor="@color/text_color666"
                                    android:paddingRight="6dp"
                                    />
                                <com.zeyuan.kyq.widget.selector.CommentLevelSelector
                                    android:id="@+id/cls4"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="match_parent"/>
                                <TextView
                                    android:id="@+id/tv_cls_4"
                                    android:layout_width="60dp"
                                    android:layout_height="match_parent"
                                    android:text="未评价"
                                    android:textSize="@dimen/font12"
                                    android:textColor="@color/text_color666"
                                    android:gravity="center_vertical|right"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_type_txt"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text=""
                            android:textColor="@color/text_color333"
                            android:textSize="@dimen/font14"
                            android:paddingLeft="@dimen/padding12"
                            android:paddingRight="@dimen/padding12"
                            android:paddingBottom="@dimen/padding4"
                            android:background="@color/main_color"
                            android:gravity="center_vertical"/>

                        <EditText
                            android:id="@+id/et_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="200dp"
                            android:textColor="@color/text_color666"
                            android:textSize="@dimen/font13"
                            android:lineSpacingExtra="3dp"
                            android:lineSpacingMultiplier="1.1"
                            android:paddingLeft="@dimen/padding12"
                            android:paddingRight="@dimen/padding12"
                            android:paddingBottom="@dimen/padding12"
                            android:gravity="left|top"
                            android:background="@null"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_photo_type"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/status_title_height"
                        android:textSize="@dimen/font14"
                        android:paddingLeft="@dimen/padding12"
                        android:paddingRight="@dimen/padding12"
                        android:hint="@string/hint_add_photo"
                        android:gravity="center_vertical"
                        />

                    <com.zeyuan.kyq.widget.MyGridView
                        android:id="@+id/gv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding12"
                        android:paddingRight="@dimen/padding12"
                        android:paddingBottom="@dimen/padding12"
                        android:horizontalSpacing="@dimen/small_margin"
                        android:numColumns="4"
                        android:verticalSpacing="@dimen/small_margin" />

                </LinearLayout>

            </com.zeyuan.kyq.widget.CustomScrollView>

        </LinearLayout>

    </com.zeyuan.kyq.widget.MyLayout>
</FrameLayout>