                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/text_color333"
                android:textSize="@dimen/font12"
                android:text="帮扶"/>
        </LinearLayout>
    </LinearLayout>
