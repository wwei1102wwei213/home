<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height48"
            >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="肿瘤头条"
                android:textColor="@color/text_color333"
                android:textSize="@dimen/font18"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/status_title_height"
                android:src="@mipmap/top_btn_back_blue"
                android:scaleType="center"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_ddd"/>
        <RelativeLayout
            android:id="@+id/iv_tab"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@color/white">

            <com.zeyuan.kyq.widget.CustomView.InsideRecyclerView
                android:id="@+id/rv_top"
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <!--<ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_alignParentRight="true"
                android:visibility="visible"
                android:src="@mipmap/home_tab_right" />-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.andview.refreshview.XRefreshView
                android:id="@+id/xrv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_f0">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical" />
            </com.andview.refreshview.XRefreshView>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@drawable/home_top_tab_shadow" />
        </RelativeLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pd"
        style="@style/progressbar_style"
        android:indeterminate="false" />
</FrameLayout>